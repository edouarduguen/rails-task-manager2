<h1>TO DO LIST</h1>
<ul class="list-group list-group-flush" class="mb-5">
  <% @tasks.each do |task| %>
  <li class="list-group-item">
    <% if task.completed %>
      <i class="far fa-check-square"></i>
    <% else %>
      <i class="far fa-square"></i>
    <% end %>
  <%= link_to task.title, task_path(task) %>
  <%= link_to task_path(task), method: :delete, data: { confirm: "Are you sure?" } do %><i class="fas fa-trash"></i> <% end %>
  <% end %>
  </li>
</ul>

<%= link_to "Add a new task", new_task_path, class: "btn btn-success" %>
